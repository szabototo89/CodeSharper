<Window x:Class="CodeSharper.DemoRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CodeSharper - Demo Runner" Height="350" Width="525">
  <DockPanel>
    <StackPanel DockPanel.Dock="Bottom">
      <Button Command="{Binding RunDemoCommand}">Run</Button>
    </StackPanel>
    <GroupBox Header="Select a demo:" DockPanel.Dock="Top">
      <ListBox ItemsSource="{Binding DemoApplications}" SelectedValue="{Binding SelectedDemoApplicationDescriptor}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <DockPanel>
              <StackPanel Orientation="Vertical" DockPanel.Dock="Left">
                <TextBlock>
                  <TextBlock FontWeight="Bold">Name:</TextBlock>
                  <TextBlock Text="{Binding Name}"/>
                </TextBlock>
                <TextBlock>
                  <TextBlock FontWeight="Bold">Description:</TextBlock>
                  <TextBlock Text="{Binding Description}"/>
                </TextBlock>
              </StackPanel>
            </DockPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </GroupBox>
  </DockPanel>
</Window>
